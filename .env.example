# ==========================================
# WealthHive - Configurações de Ambiente
# ==========================================

# Ambiente
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend
STREAMLIT_PORT=8501

# Database - PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/wealthhive
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Database - SQLite (para desenvolvimento)
SQLITE_URL=sqlite+aiosqlite:///./wealthhive.db
SQLITE_WAL_MODE=true

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=50

# RabbitMQ / Celery
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_ENABLED=true

# B3 / Brokers
B3_API_KEY=your-b3-api-key
XP_API_KEY=your-xp-api-key
CLEAR_API_KEY=your-clear-api-key
BTG_API_KEY=your-btg-api-key

# ML / NLP
MODEL_CACHE_DIR=./models
FINBERT_MODEL=ProsusAI/finbert
BERTIMBAU_MODEL=neuralmind/bert-base-portuguese-cased

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# Feature Flags
ENABLE_ML_PREDICTIONS=true
ENABLE_NLP_SENTIMENT=true
ENABLE_REALTIME_WEBSOCKET=true
ENABLE_FUNDAMENTAL_ANALYSIS=true
